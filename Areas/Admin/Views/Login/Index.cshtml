
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Login</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/Admin/css/bootstrap.min.css">
</head>
<body>
    <div class="container" style="margin-top:100px;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-primary" style="border:solid 1px #d8373e; ">
                    <div class="panel-heading"  style="border:solid 1px #d8373e; background-color: #d8373e;">Login</div>
                    <div class="panel-body">
                        <form method="post" action="/Admin/Login/DoLogin">
                            @Html.AntiForgeryToken()
                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-2">Email</div>
                                <div class="col-md-9"><input type="email" name="email" required class="form-control" /></div>
                            </div>
                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-2">Password</div>
                                <div class="col-md-9"><input type="password" name="password" required class="form-control" /></div>
                            </div>
                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-2"></div>
                                <div class="col-md-9">
                                    <input  style="background-color: #d9534f; border-color: #d43f3a;" type="submit" value="Login" class="btn btn-primary" />
                                    <input type="reset" value="Reset" class="btn btn-danger" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
