
@{
    ViewBag.Title = "AddProdSale";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using Phone.Models
@model ProdSale

<link href="~/Assets/admin/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Assets/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
<link href="~/Assets/admin/css/sb-admin.css" rel="stylesheet">
<div class="col-md-8 col-xs-offset-2" ; style="margin-top:10px ">
    <div class="panel panel-primary" style="border:solid 1px #d8373e">
        <div class="panel-heading" style="background-color:#d8373e; border:solid 1px #d8373e">Edit Product</div>
        <div class="panel-body">
            <form method="post" action="@ViewBag.formAction" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <!-- row -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3">Product name</div>
                    <div class="col-md-9">
                        <input type="text" name="name" class="form-control" value="@if(Model != null){@Model.name}">
                    </div>
                </div>
                <!-- end row -->
                <!-- row -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3">New Price</div>
                    <div class="col-md-9">
                        <input type="number" min="0" name="newprice" class="form-control" value="@if(Model != null){@Model.newprice}">
                    </div>
                </div>
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3">Old Price</div>
                    <div class="col-md-9">
                        <input type="number" min="0" name="oldprice" class="form-control" value="@if(Model != null){@Model.oldprice}">
                    </div>
                </div>
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3">Brand</div>
                    <div class="col-md-9">
                        <select name="brand_id" class="form-control" style="width:200px;">
                            @{
                                PhoneEntities csdl1 = new PhoneEntities();
                                var brand = csdl1.Brands.OrderByDescending(tbl => tbl.brand_id);
                            }
                            @foreach (var item in brand)
                            {
                                <option @if (Model != null && Model.brand_id == item.brand_id) { <text> selected</text>} value="@item.brand_id">@item.Brand_Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3">Thuộc danh mục</div>
                    <div class="col-md-9">
                        <select name="id_Category" class="form-control" style="width:200px;">
                            @{
                                PhoneEntities csdl = new PhoneEntities();
                                var category = csdl.Categories.OrderByDescending(tbl => tbl.id_Category);
                            }
                            @foreach (var item in category)
                            {
                                <option @if (Model != null && Model.id_Category == item.id_Category) { <text> selected</text>} value="@item.id_Category">@item.name</option>
                            }
                        </select>
                    </div>
                </div>
                <!-- end row -->
                <!-- row -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3"></div>
                    <div class="col-md-9">
                        <input type="checkbox" @if (Model != null && Model.Random == true) { <text> checked</text> } name="Random" id="Random"> <label for="Random">Random</label>
                    </div>
                </div>
                <!-- end row -->
                <!-- row -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3"></div>
                    <div class="col-md-9">
                        <input type="checkbox" @if (Model != null && Model.Bestseller == true) { <text> checked</text> } name="Bestseller" id="Bestseller"> <label for="Bestseller">Bestseller </label>
                    </div>
                </div>
                <!-- end row -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3"></div>
                    <div class="col-md-9">
                        <input type="checkbox" @if (Model != null && Model.HotSale == true) { <text> checked</text> } name="HotSale" id="HotSale"> <label for="HotSale">HotSale</label>
                    </div>
                </div>
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3"></div>
                    <div class="col-md-9">
                        <input type="checkbox" @if (Model != null && Model.HotDeals == true) { <text> checked</text> } name="HotDeals" id="HotDeals"> <label for="HotDeals">HotDeals</label>
                    </div>
                </div>
                <!-- row -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3">Ảnh</div>
                    <div class="col-md-9">
                        <input type="file" name="img">
                    </div>
                </div>
                <!-- end row -->
                <!-- row -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-3"></div>
                    <div class="col-md-9">
                        <input style="background-color:#d8373e; border:solid 1px #d8373e" type="submit" class="btn btn-primary" value="Process">
                    </div>
                </div>
                <!-- end row -->
            </form>
        </div>
    </div>
</div>




