@using Phone.Models
@{
    ViewBag.Title = "GridProduct";
}
@{
    PhoneEntities db = new PhoneEntities();
    var GridProduct = db.Products.OrderByDescending(tbl => tbl.id_Product).ToList();
}
@model Phone.Models.ShoppingCart
<div class="row products">
    @foreach (var item in GridProduct)
    {
        <div class="col-md-3 col-sm-6">
            <div class='productslider-item item'>
                <div class="item-inner">
                    <div class="images-container">
                        <div class="product_icon">
                            <div class='new-icon'><span>new</span></div>
                        </div>
                        <a href="/Category/DetailsPage/@item.id_Product" title="Nunc facilisis" class="product-image">
                            <img src="~/Assets/upload/Product/@item.img" alt="Nunc facilisis" />
                        </a>
                        <div class="box-hover">
                            <ul class="add-to-links">
                                <li><a href="#" class="link-quickview">Quick View</a></li>
                                <li><a href="#" class="link-wishlist">Add to Wishlist</a></li>
                                <li><a href="#" class="link-compare">Add to Compare</a></li>
                                <li><a href="/Customer/ThemVaoGioHang/@item.id_Product" class="link-cart">Add to Cart</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="des-container">
                        <h2 class="product-name"><a href="/Category/DetailsPage/@item.id_Product" title="Nunc facilisis">@item.name</a></h2>
                        <div class="price-box">
                            <p class="special-price">
                                <span class="price-label">Special Price</span>
                                <span class="price">@item.price</span>
                            </p>
                        </div>
                        <div class="ratings">
                            <div class="rating-box">
                                <div class="rating" style="width:67%"></div>
                            </div>
                            <span class="amount"><a href="#">3 Review(s)</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div><!-- /.product -->
